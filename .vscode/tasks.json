{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug Elm code",
            "type": "shell",
            "command": "elm make src\\elm\\Main.elm --output=assets\\js\\elm.js",
            "presentation": {
                "reveal": "silent"
            },
            "group": "build"
        },
        {
            "label": "Build Optimized Elm code",
            "type": "shell",
            "command": "elm make src\\elm\\Main.elm --optimize --output=assets\\js\\elm.opt.js",
            "presentation": {
                "reveal": "silent"
            },
            "group": "build"
        },
        {
            "label": "Minify elm",
            "type": "shell",
            "command": "npx uglifyjs assets\\js\\elm.opt.js --compress pure_funcs=[F2,F3,F4,F5,F6,F7,F8,F9,A2,A3,A4,A5,A6,A7,A8,A9],pure_getters,keep_fargs=false,unsafe_comps,unsafe | npx uglifyjs --mangle --output assets\\js\\elm.js",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "dependsOn": "Build Optimized Elm code"
        },
        {
            "label": "Delete Dangling js",
            "type": "shell",
            "command": "del assets\\js\\elm.opt.js",
            "presentation": {
                "reveal": "never"
            },
            "group": "build",
            "dependsOn": "Minify elm"
        },
        {
            "label": "Run Debug Code",
            "type": "shell",
            "command": "neu run",
            "group": "none",
            "presentation": {
                "reveal": "silent",
                "clear": true
            },
            "dependsOn": "Build Debug Elm code"
        },
        {
            "label": "Build project",
            "type": "shell",
            "command": "neu build --release",
            "presentation": {
                "reveal": "silent",
                "clear": true
            },
            "dependsOn": "Delete Dangling js"
        }
    ]
}